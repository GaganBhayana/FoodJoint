<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To FoodJoint!</h1>
             <p>View our hand-picked Foods from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/myfoods/new">Add New Food Item</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% myfoods.forEach(function(myfood){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= myfood.image %>">
                   <div class="caption">
                       <h4><%= myfood.name %></h4>
                   </div>
                   <p>
                       <a href="/myfoods/<%= myfood._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
